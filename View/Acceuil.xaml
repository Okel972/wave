<Window x:Class="Wave.View.Acceuil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wave.View"
        mc:Ignorable="d"
        Title="Acceuil" Height="250" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Nom d'utilisateur" />
            <TextBox Name="txtUsername" Margin="5" />
            <Label Content="Mot de passe" />
            <PasswordBox Name="txtPassword" Margin="5" />
            <Button Content="Connexion" Name="btnLogin" Click="btnLogin_Click" Margin="10" />
            <Button Content="Deconnexion" Name="btnLogout" Click="btnLogout_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
